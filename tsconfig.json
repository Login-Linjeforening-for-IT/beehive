{
  "compilerOptions": {
    "target": "ES2023",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
        "@components/*": ["./src/components/*"],
        "@context/*": ["./src/context/*"],
        "@svg/*": ["./src/components/svg/*"],
        "@config": ["./src/constants.ts"],
        "@img/*": ["./public/img/*"],
        "@pages/*": ["./src/pages/*"],
        "@text/*": ["./public/text/*"],
        "@themes/*": ["./src/themes/*"],
        "@utils/*": ["./src/utils/*"],
        "@interfaces": ["./interfaces.ts"],
        "@/*": ["./src/*"]
    },
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/layouts/topbar/Navigation.tsx", "src/layouts/topbar/TopBar.tsx", "src/components/mazemap/MazeMapEmbed.tsx", "src/layouts/footer/Footer.jsx", "src/layouts/footer/SocialLinks.tsx", "src/layouts/topbar/MobileNavigation.tsx"],
  "exclude": ["node_modules"]
}
